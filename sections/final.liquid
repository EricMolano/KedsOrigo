{% schema %}
{
  "name": "Banners con título",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Título de la sección",
      "default": "Nuestro Destacado"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Banner",
      "settings": [
        {
          "type": "image_picker",
          "id": "banner_image",
          "label": "Imagen del banner"
        },
        {
          "type": "url",
          "id": "banner_link",
          "label": "Enlace del banner"
        }
      ]
    }
  ],
  "max_blocks": 2,
  "presets": [
    {
      "name": "Banners con título",
      "category": "Imágenes",
      "blocks": [
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}

<section class="banner-section">
  <h2>{{ section.settings.section_title }}</h2>
  <div class="banner-container">
    {% for block in section.blocks %}
      <div class="banner-item">
        {% if block.settings.banner_link != blank %}
          <a href="{{ block.settings.banner_link }}">
        {% endif %}
        {% if block.settings.banner_image != blank %}
          <img src="{{ block.settings.banner_image | img_url: 'large' }}" alt="Banner">
        {% else %}
          <div class="placeholder">Sube una imagen</div>
        {% endif %}
        {% if block.settings.banner_link != blank %}
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

<style>
  .banner-section {
    text-align: center;
    padding: 20px;
  }
  .banner-container {
    display: flex;
    gap: 20px;
    justify-content: center;
  }
  .banner-item img {
    width: 100%;
    max-width: 500px;
    height: auto;
    border-radius: 10px;
  }
  .placeholder {
    width: 500px;
    height: 300px;
    background: #f3f3f3;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
    font-size: 18px;
  }
</style>
