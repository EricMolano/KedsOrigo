<section class="banner-section">
  <h2>{{ section.settings.section_title }}</h2>
  <div class="banner-container">
    {% for block in section.blocks %}
      <div class="banner-item">
        {% if block.settings.banner_link != blank %}
          <a href="{{ block.settings.banner_link }}">
        {% endif %}
        {% if block.settings.banner_image != blank %}
          <img src="{{ block.settings.banner_image | img_url: 'large' }}" alt="Banner">
        {% else %}
          <div class="placeholder">Sube una imagen</div>
        {% endif %}
        {% if block.settings.banner_link != blank %}
          </a>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

<style>
  .banner-section {
    text-align: center;
    padding: 40px; /* Incrementa el padding para más espacio */
  }
  .banner-container {
    display: flex;
    gap: 30px; /* Mayor espacio entre los banners */
    justify-content: center;
    flex-wrap: wrap; /* Permite que los banners se acomoden si no caben */
  }
  .banner-item img {
    width: 100%;
    max-width: 800px; /* Incrementa el ancho máximo del banner */
    height: auto;
    border-radius: 10px;
  }
  .placeholder {
    width: 800px; /* Ajusta el tamaño del placeholder para que coincida */
    height: 400px; /* Incrementa la altura del placeholder */
    background: #f3f3f3;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
    font-size: 18px;
  }
</style>
